<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootbase.repository.UsersMapper">
    <select id="getAll" resultType="com.example.springbootbase.entity.UserEntity">
        SELECT * FROM users;
    </select>
    <insert id="insert" parameterType="com.example.springbootbase.entity.UserEntity">
        INSERT INTO
            (
                first_name,
                last_name,
                address
                )
            VALUES (
                #{firstName},
                #{lastName},
                #{address}
            )
    </insert>
</mapper>